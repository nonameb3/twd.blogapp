<% include ./partials/header %>
<h>Index page</h>

<% blogs.forEach((blog)=>{%>

    <div class="container main">
        <h1><%=blog.title%></h1>
        <img src="<%=blog.image%>">
        <span><%=blog.createDate.toDateString()%>)</span>
        <p><%=blog.body.substring(0,100)%>...</p>
        <a href="/blogs/<%=blog._id%>">ShowDetail</a>
    </div>
    
<% }) %>
<% include ./partials/footer %>